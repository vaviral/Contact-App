

<div class="container-fluid">
    @if (ViewBag.Title == "Sent Messages" || ViewBag.Title == "Home" || ViewBag.Title == "Add Contact" || ViewBag.Title == "Login" )
    {
        <input id="Menu" type="hidden" value=@ViewBag.Title />
    }
    else
    {
        <input id="Menu" type="hidden" />
    }

    <div class="row" style="border-right-color:none;font-size:large;background-color:black;margin-top:0">
        <ul class="nav nav-tabs col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 col-lg-11 col-md-11 col-sm-11 col-xs-11">
            <li id="Home" style="cursor:pointer"><a href="/Account/Home" onclick="Contacts()">Contacts</a></li>
            <li id="Sent" style="cursor:pointer"><a href="/Account/SentMessages" onclick="SentMessages()">Sent Messages</a></li>
            <li id="AddContact" style="cursor:pointer"><a href="/Account/AddContact" onclick="AddContact()">Add Contact</a></li>
            @if (Session["Auth"] == null)
            {
                <li id="Login" style="cursor:pointer"><a href="/Account/Login" onclick="Login()">Login</a></li>
            }
            else
            {
                <li id="Signout" style="cursor:pointer"><a href="/Account/Logout" onclick="Logout()">Signout</a></li>
            }
        </ul>
    </div>
</div>
